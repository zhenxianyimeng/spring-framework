<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="userServiceImpl" class="com.mine.bean.UserServiceImpl"/>

	<bean id="orderServiceImpl" class="com.mine.bean.OrderServiceImpl"/>

	<bean id="logArgsAdvice" class="com.mine.bean.LogArgsAdvice"/>

	<bean id="logResultAdvice" class="com.mine.bean.LogResultAdvice"/>

	<bean id="logArgsAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice" ref="logArgsAdvice"/>
		<property name="pattern" value="mine.bean.*.create.*"/>
	</bean>

	<bean id="logResultAdvisor" class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice" ref="logResultAdvice"/>
		<property name="pattern" value="mine.bean.*.query.*"/>
	</bean>

	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

	<bean id="user" class="com.mine.bean.User"/>
</beans>